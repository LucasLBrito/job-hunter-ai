# Production Environment Variables - Local
# ATENÇÃO: Use valores de produção aqui!

# LLM Configuration (escolha um)
OPENAI_API_KEY=sk-prod-your-key-here
# ANTHROPIC_API_KEY=sk-ant-prod-your-key-here

# Azure Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-prod-resource.cognitiveservices.azure.com
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-production-key-here

# WhatsApp Business API
WHATSAPP_API_TOKEN=your-production-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-production-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-production-business-account-id
WHATSAPP_VERIFY_TOKEN=production-webhook-verification-token

# Database
DATABASE_URL=sqlite:///./data/database.db

# Redis
REDIS_URL=redis://localhost:6379/0

# Security - IMPORTANTE: Gerar novo SECRET_KEY!
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-256-BIT-KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Application Settings
ENV=production
LOG_LEVEL=INFO
DEBUG=false

# Job Scraping Settings
MAX_JOBS_PER_SEARCH=50
SCRAPER_RATE_LIMIT_DELAY=3
CACHE_TTL_HOURS=24

# Agent Settings
AGENT_MAX_ITERATIONS=100
AGENT_TIMEOUT_SECONDS=300

# Scheduler Settings
DAILY_SEARCH_TIME=09:00
DAILY_SUMMARY_TIME=18:00
