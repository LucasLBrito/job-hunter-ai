# Development Environment Variables
# LLM Configuration (escolha um)
OPENAI_API_KEY=sk-your-openai-key-here
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Azure Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-azure-di-key-here

# WhatsApp Business API
WHATSAPP_API_TOKEN=your-whatsapp-business-api-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_VERIFY_TOKEN=random-string-for-webhook-verification

# Database
DATABASE_URL=sqlite:///./data/database.db

# Redis
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=dev-secret-key-change-in-production-min-256-bits
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Application Settings
ENV=development
LOG_LEVEL=DEBUG
DEBUG=true

# Job Scraping Settings
MAX_JOBS_PER_SEARCH=50
SCRAPER_RATE_LIMIT_DELAY=2
CACHE_TTL_HOURS=24

# Agent Settings
AGENT_MAX_ITERATIONS=100
AGENT_TIMEOUT_SECONDS=300

# Scheduler Settings
DAILY_SEARCH_TIME=09:00
DAILY_SUMMARY_TIME=18:00
