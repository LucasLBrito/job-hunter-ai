# Production Environment Variables
DATABASE_URL=sqlite+aiosqlite:///./data/database.db
REDIS_URL=redis://redis:6379/0
ENVIRONMENT=production

# App Settings
APP_NAME=Job Hunter AI
VERSION=0.1.0
DEBUG=false

# Security
# WARNING: Change this for real production use
SECRET_KEY=dev_secret_key_change_in_production_12345
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# LLM Configuration (Copied from local)
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Vector DB
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=job-hunter-ai
PINECONE_ENV=us-east-1

# Scraper Settings
MAX_JOBS_PER_SEARCH=50
SCRAPER_RATE_LIMIT_DELAY=2
CACHE_TTL_HOURS=24
